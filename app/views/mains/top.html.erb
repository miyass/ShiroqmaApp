                       ・illust<input type="checkbox" value="image" name="image">
                       ・music<input type="checkbox" value="image" name="image">
                       ・movie<input type="checkbox" value="image" name="image">
                   </div>
                </div>
                <div class="belongTag">
                    <div class="belongTagTitle">
                        所属tag
                    </div>
                </div>
                <div class="tag">
                    <div class="tagTitle">
                        tag
                    </div>
                </div>
                <div class="details"> 
                    <%= f.text_area :text, {class: 'detail', placeholder: 'caption or detail'} %>
                </div>

                <div>
                <%= f.submit :class => 'submit', :value => '' %>
                </div>
            <% end %>
        </div>
    </div>
</div>

