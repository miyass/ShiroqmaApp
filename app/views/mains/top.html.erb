<div id="formModalWrapper">
    <div class="formModal">
        <div class="uploadForm">
            <div class="title">
            Upload
            </div>
            <%= form_for @form,:url => {:action => 'create'} do |f| %>
                <div class='image'>
                    <%= f.label :image, 'Upload Image', {class: 'imageLabel'} %>
                    <%= f.file_field :image, {style: 'display:none'} %>
                </div>
                
                <%#ここは後でタイトルデータベース作って修正%>
                <div>
                    <%= f.text_field :text, {class: 'formTitle', placeholder: 'title'} %>
                </div>
                <%#同じくデータベース追加して修正%>
                <div class="category">
                    <label class="categoryTitle">select category</label>
                   <div class="radioButton">
